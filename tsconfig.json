{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "declaration": true
  }
}
