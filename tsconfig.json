{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  }
}
